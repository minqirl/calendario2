<body>
<div class="calendar">
    <header>
        <button onclick="prevMonth()"><i class="fas fa-arrow-left"></i></button>
        <h2 id="monthYear">November</h2>
         <button onclick="nextMonth()"><i class="fas fa-arrow-right"></i></button>
    </header>
    <div class="day-names">
        <div>Dom</div>
        <div>Lun</div>
        <div>Mar</div>
        <div>Mie</div>
        <div>Jue</div>
        <div>Vie</div>
        <div>Sab</div>
</div>
<div class="days" id="calendarDays">
        <div>1</div>
        <div>2</div>
        <div>3</div>
        <div>4</div>
        <div>5</div>
        <div>6</div>
        <div>7</div>
    </div>  
    <script>
        const monthYear = document.getElementById("monthYear");
        const calendarDays = document.getElementById("calendarDays");
        let date= new Date();
        function renderCalendar(){
            const year = date.getFullYear();
            const month = date.getMonth();

            const firstDay = new Date(year, month, 1).getDay();
            const lastDate = new Date(year, month + 1, 0).getDate();
            
            calendarDays.innerHTML = "";
            monthYear.innerText = `${date.toLocaleDateString("default",{
    month: "long"})} ${year}`;
            for(let i = 0; i < firstDay; i++){
         calendarDays.innerHTML += '<div class="empty"></div>'
            }
            function pad(n){ return n.toString().padStart(2,'0'); }
            for(let d = 1; d <= lastDate; d++){
                const today = new Date();
                const isToday = d === today.getDate() && year === today.getFullYear() && month
                 === today.getMonth();
                const dateStr = `${year}-${pad(month+1)}-${pad(d)}`;

                 calendarDays.innerHTML += `<div class="${isToday ? "today" : ""}" data-date="${dateStr}">
                    ${d}</div>`;
            }
        }

    function prevMonth(){
        date.setMonth(date.getMonth() - 1);
        renderCalendar();
    }
    function nextMonth(){
        date.setMonth(date.getMonth() + 1);
        renderCalendar();}

        renderCalendar();

                function hexToRgb(hex) {
            const h = hex.replace('#', '');
            return {
                r: parseInt(h.substring(0,2), 16),
                g: parseInt(h.substring(2,4), 16),
                b: parseInt(h.substring(4,6), 16)
            };
        }

        function blendToTarget(progress, targetHex) {
            const target = hexToRgb(targetHex);
            const white = {r:255, g:255, b:255};
            const r = Math.round(white.r * (1 - progress) + target.r * progress);
            const g = Math.round(white.g * (1 - progress) + target.g * progress);
            const b = Math.round(white.b * (1 - progress) + target.b * progress);
            return `rgb(${r}, ${g}, ${b})`;
        }

        function startOfWeek(d) {
          const date = new Date(d);
            const day = date.getDay(); 
            const diff = day; 
            const sunday = new Date(date);
            sunday.setHours(0,0,0,0);
            sunday.setDate(date.getDate() - diff);
            return sunday;
        }

        function updateWeeklyBackground() {
            const today = new Date();
            const sunday = startOfWeek(today);
            const nextSunday = new Date(sunday);
            nextSunday.setDate(sunday.getDate() + 7);
            const total = nextSunday - sunday;
            const elapsed = today - sunday;
            let progress = elapsed / total;
            if (progress < 0) progress = 0;
            if (progress > 1) progress = 1;

            const weekColor = blendToTarget(progress, '#fff7ec');

            // seleccionar todos los dÃ­as renderizados
const dayEls = document.querySelectorAll('[data-date]');
dayEls.forEach(el => {
    const [y, m, day] = el.getAttribute('data-date').split('-');
    const d = new Date(y, m - 1, day);
    d.setHours(0,0,0,0);

    if (d >= sunday && d < nextSunday) {
        el.style.transition = 'background-color 0.3s ease';
        el.style.backgroundColor = weekColor;
    } else {
        el.style.backgroundColor = '';
    }
});
        }
        // Actualiza al cargar y cada hora
        updateWeeklyBackground();
        setInterval(updateWeeklyBackground, 60 * 60 * 1000);
    </script>
</body>
